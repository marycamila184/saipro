package com.up.somamatrizes.main;

import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class Main {

	private static Scanner input;

	public static void main(String[] args) {
//		if (args.length == 0) {
//			System.out.println("Arquivo para leitura não especeficado!");
//			System.exit(1);
//		}

		try {
			File file = new File("entrada1.txt");
			input = new Scanner(file);
		} catch (IOException ioException) {
			System.err.println("O arquivo não pode ser aberto.");
			System.exit(1);
		}

		int total = 0;
		while (input.hasNext()) {
			if(input.hasNext("/n")){
				System.out.println("Pulo linha");
			}
			total += 1;
			input.next();
		}

		System.out.printf("O arquivo contém " + total + " de linhas.");

		input.close();

	}

}
